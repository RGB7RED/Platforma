# Настройки приложения
ENVIRONMENT=development
APP_NAME=AI Collaboration Platform
APP_VERSION=1.0.0-mvp

# Настройки Telegram Bot
TELEGRAM_TOKEN=your_telegram_bot_token_here
WEB_APP_URL=https://your-domain.com/app

# Настройки безопасности
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки CORS
ALLOWED_ORIGINS=["https://telegram.org", "https://web.telegram.org", "http://localhost:3000", "http://localhost:8000"]

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=json

# Настройки ИИ-моделей (для будущего)
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# LLAMA_API_URL=http://localhost:8080

# Настройки базы данных (опционально)
# DATABASE_URL=postgresql://user:password@localhost:5432/aiplatform
# REDIS_URL=redis://localhost:6379

# Настройки ограничений
MAX_FILE_SIZE_MB=10
MAX_TOTAL_FILES=100
MAX_TASK_DURATION_SECONDS=1800
