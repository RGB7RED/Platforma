# Application environment (development|production)
ENVIRONMENT=development
# Port for the API server (Railway sets PORT automatically)
PORT=8000
# Postgres connection string for task persistence
DATABASE_URL=postgresql://user:pass@host:5432/dbname
# Secret used for signing/auth features (set to a strong value)
SECRET_KEY=change-me
# Comma-separated CORS allowlist for browser clients
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://web.telegram.org,https://telegram.org
# Toggle file persistence on disk (true/false)
ENABLE_FILE_PERSISTENCE=true
# Telegram bot token (required to run the bot)
TELEGRAM_TOKEN=REDACTED
# URL to the Telegram Web App frontend
WEB_APP_URL=http://localhost:3000
